# shellcheck disable=SC2148,SC2155

# https://github.com/plusmedi/go-coreg/tree/main/zap/logger/v2#environment
export ZAP_DEVELOPMENT=true

# https://docs.buf.build/reference/inputs
export BUF_INPUT_MYIP=proto/myipapis

# https://github.com/plusmedi/go-coreg/blob/main/README.md#goprivate%E3%82%92%E8%A8%AD%E5%AE%9A%E3%81%99%E3%82%8B
export GOPRIVATE=github.com/plusmedi,$(go env GOPRIVATE)

# grpc の待受アドレス
export MYIPAPIS_ADDR=127.0.0.1:51051

export MY_PUBLIC_IP_ADDRESS=$(curl -s https://api.ipify.org)

[[ ! -f ./.envrc.local ]] || source_env ./.envrc.local
